{
  "name": "kwoka-theme",
  "version": "0.0.2",
  "description": "A Shopify Theme Built on AlpineJS and TailwindCSS",
  "scripts": {
    "css:build": "NODE_ENV=production postcss assets/tailwind.pre.css --o assets/tailwind.css --verbose",
    "css:critical": "NODE_ENV=critical TAILWIND_MODE=build postcss assets/tailwind.critical.pre.css --o snippets/critical-css.liquid --verbose",
    "css:fulldev": "NODE_ENV=development TAILWIND_MODE=build postcss assets/tailwind.pre.css --o assets/tailwind.css --verbose",
    "css:watch": "NODE_ENV=development TAILWIND_MODE=watch postcss assets/tailwind.pre.css --o assets/tailwind.css --verbose -w",
    "sync:dev": "browser-sync start --proxy 'https://kwoka-test-theme.myshopify.com' --files 'reload.config.js' --reload-delay 2000 --config bs.config.js",
    "deploy:dev": "theme deploy -e development --allow-live",
    "deploy:prod": "theme deploy -e live --allow-live",
    "download:dev": "theme download -e development",
    "init:dev": "theme watch -e development --allow-live --notify=reload.config.js",
    "build:dev": "run-p css:build css:critical minify:all && npm run deploy:dev",
    "build:prod": "run-s css:build deploy:prod",
    "watch:dev": "run-p init:dev css:watch sync:dev",
    "reset:dev": "run-s download:dev build:dev",
    "open:dev": "theme open -e development -E",
    "minify:all": "run-p minify:alpine minify:css && run-s minify:js",
    "minify:alpine": "minify node_modules/alpinejs/dist/alpine.js > assets/alpine.min.js",
    "minify:css": "minify assets/theme.css > assets/theme.min.css",
    "minify:js": "minify assets/lazysizes.js assets/alpine.min.js > assets/minified.min.js && minify assets/theme.js > assets/theme.min.js"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": {
    "name": "Eric Kwoka",
    "email": "eric@thekwoka.net",
    "url": "https://thekwoka.net/"
  },
  "dependencies": {
    "alpinejs": "^2.8.2",
    "autoprefixer": "^10.2.5",
    "postcss": "^8.2.15"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/typography": "^0.4.0",
    "browser-sync": "^2.26.14",
    "cssnano": "^5.0.2",
    "minify": "^7.0.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.1.2"
  }
}
