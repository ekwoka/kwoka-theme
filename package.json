{
  "name": "kwoka-theme",
  "version": "0.0.1",
  "description": "A Shopify Theme Built on AlpineJS and TailwindCSS",
  "scripts": {
    "css:build": "NODE_ENV=production postcss assets/tailwind.pre.css --o assets/tailwind.css --verbose",
    "css:critical": "NODE_ENV=critical postcss assets/tailwind.critical.pre.css --o snippets/critical-css.liquid --verbose",
    "css:fulldev": "postcss assets/tailwind.pre.css --o assets/tailwind.css --verbose",
    "css:watch": "NODE_ENV=development TAILWIND_MODE=watch postcss assets/tailwind.pre.css --o assets/tailwind.css --verbose -w",
    "sync:dev": "browser-sync start --proxy 'https://kwoka-test-theme.myshopify.com' --files 'reload.config.js' --reload-delay 2000 --config bs.config.js",
    "deploy:dev": "theme deploy -e development --allow-live",
    "deploy:prod": "theme deploy -e live --allow-live",
    "download:dev": "theme download -e development",
    "init:dev": "theme watch -e development --allow-live --notify=reload.config.js",
    "build:dev": "run-s css:build css:critical deploy:dev",
    "build:prod": "run-s css:build deploy:prod",
    "watch:dev": "run-p init:dev css:watch sync:dev",
    "reset:dev": "run-s download:dev build:dev",
    "open:dev": "theme open -e development & theme open -e development -E",
    "postinstall": "npm i browser-sync -g"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": {
    "name": "Eric Kwoka",
    "email": "ninjatheory@gmail.com",
    "url": "https://thekwoka.net/"
  },
  "dependencies": {
    "autoprefixer": "^10.2.5",
    "postcss": "^8.2.12"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/typography": "^0.4.0",
    "cssnano": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.1.1"
  }
}
